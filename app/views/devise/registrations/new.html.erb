<div id="signup">
  <h2>アカウント作成</h2>
  <hr />
  <i class="fab fa-twitter"></i>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :username, placeholder: 'ユーザー名' %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス',autocomplete: "email" %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: 'パスワード' %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'パスワード(確認用)' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>