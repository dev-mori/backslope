<h1>ユーザー名:<%= @user.username %></h1>
<% if user_signed_in? && current_user.id == @user.id %>
  <button>プロフィール編集</button>
<% elsif !Follow.find_by(follow_id: current_user.id, follower_id: @user.id) %>
  <%= link_to follows_create_path(follower_id: @user.id), method: "post" do %>
    <button>フォロー</button>
  <% end %>
<% else %>
  <%= link_to follows_destroy_path(follower_id: @user.id), method: "post" do %>
    <button>フォロー中</button>
  <% end %>
<% end %>

<%= link_to "ログアウト", destroy_user_session_path, method: :delete %> <!-- ログアウトをする -->
<%= link_to 'ツイートを投稿する', tweets_path, {class: 'btn btn-primary withripple' }%>
<% @tweets.each do |tweet| %>
  <div class="contents row" >
    <div class="name3">投稿者:<%= link_to tweet.user.username, user_path(tweet.user), method: :get %></div>
    <div class="name2">投稿日時:<%= tweet.created_at.strftime("%Y-%m-%d %H:%M:%S") %></div>
    <div class="name2"><%= link_to '詳細', tweet_path(tweet), method: :get %></div>
    <% if user_signed_in? && current_user.id == tweet.user_id %>
      <div class="name2">
        <%= link_to '編集', edit_tweet_path(tweet), method: :get %>
      </div>
      <div class="name2">
        <%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %>
      </div>
    <% end %>
    <div class="name3"><%= simple_format(tweet.text) %></div>
  </div>
<% end %>